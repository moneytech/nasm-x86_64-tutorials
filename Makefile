arg=max

#-------------------------------------------------------
#-- Default objective
#-------------------------------------------------------
all: build

$(arg).o:
	#--Building $(arg)
	nasm -f elf64 -o $(arg).o $(arg).asm

$(arg):
	#-- Building executable
	ld -o $(arg) $(arg).o

#-------------------------------------------------------
#-- To generate .o
#-------------------------------------------------------
build: $(arg).o $(arg)


#-------------------------------------------------------
#-- Clean temporary files
#-------------------------------------------------------
clean:
	rm $(arg).o $(arg)


.PHONY: all clean
